    </style>

    <script>
      (function(){
        const track = document.getElementById('logoTrack');
        if (!track) return;
        const carousel = track.parentElement;
        function ensureEnoughContent(){
          const trackW = track.getBoundingClientRect().width;
          const containerW = carousel.getBoundingClientRect().width;
          if (trackW < containerW * 2) {
            const groups = Array.from(track.querySelectorAll('.logo-group'));
            groups.forEach(g=>{
              const clone = g.cloneNode(true);
              clone.setAttribute('aria-hidden','true');
              track.appendChild(clone);
            });
            setTimeout(ensureEnoughContent, 20);
          }
        }
        ensureEnoughContent();
        window.addEventListener('resize', function(){
          clearTimeout(window.__logoResizeTimer);
          window.__logoResizeTimer = setTimeout(ensureEnoughContent, 120);
        });
      })();
    </script>
