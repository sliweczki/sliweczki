.parallax {
  position: relative;
  width: 100vw;
  margin-left: calc(-1 * (100vw - 100%) / 2);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.parallax::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.55);
  z-index: 1;
}
.parallax > * { position: relative; z-index: 2; }
@media (min-width: 768px) {
